<h1>Parks#index</h1>
<p>Find me in app/views/parks/index.html.erb</p>

<!-- new_park is the prefix. _path indicates the path/url -->
<%= link_to('Add a new park', new_park_path) %>

<% @park.each do |element| %>
<!-- link to park show page, which is just 'park'. Passing in 'element' puts the :id in the URL -->
  <h2><%= link_to(element.name, park_path(element)) %></h2>
  <span><%= link_to("Delete", park_path(element), method: :delete) %></span>

<% end %>